{
  "name": "ingenr",
  "version": "0.5.0",
  "description": "Pragmatic and flexible code generation utility",
  "keywords": [
    "code-generation",
    "macro",
    "template"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "ingenr": "./lib/cli.js"
  },
  "author": "Lorefnon <lorefnon@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/lorefnon/InGenR"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame src/**/*.ts",
    "prebuild": "rimraf dist",
    "build:tsc": "tsc",
    "build": "yarn run build:tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "yarn run lint && yarn run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "yarn run lint",
      "yarn run test",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@types/bufferstream": "^0.6.35",
    "@types/chalk": "^2.2.0",
    "@types/cosmiconfig": "^5.0.3",
    "@types/debug": "^4.1.0",
    "@types/dot": "^1.1.2",
    "@types/fancy-log": "^1.3.0",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.0",
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.116",
    "@types/minimist": "^1.2.0",
    "@types/node": "^13.13.1",
    "@types/tmp": "^0.1.0",
    "@types/xregexp": "^3.0.29",
    "colors": "^1.3.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^2.0.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "node-bufferstream": "^0.1.1",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "cli-progress": "^2.1.0",
    "cosmiconfig": "^5.0.6",
    "debug": "^4.1.0",
    "dot": "^1.1.2",
    "fancy-log": "^1.3.2",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "tmp": "^0.1.0",
    "xregexp": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
